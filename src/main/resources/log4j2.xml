<Configuration packages="com.tub_aiglart.api">
    <Properties>
        <property name="fileDate">${date:dd-MM-yyyy}</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>[%d{HH:mm:ss}] [%level] %c{36} Â» %msg%n</pattern>
            </PatternLayout>
        </Console>
        <File name="LatestLog" append="false">
            <FileName>logs/latest.log</FileName>
            <PatternLayout>
                <pattern>[%d{HH:mm:ss}] [%level] %c{36} - %msg%n</pattern>
            </PatternLayout>
        </File>
        <File name="Log">
            <FileName>logs/${fileDate}.log</FileName>
            <PatternLayout>
                <pattern>[%d{HH:mm:ss}] [%level] %c{36} - %msg%n</pattern>
            </PatternLayout>
        </File>
        <Async name="Async">
            <AppenderRef ref="Log"/>
            <AppenderRef ref="LatestLog"/>
        </Async>
    </Appenders>
    <Loggers>
        <Root>
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>
